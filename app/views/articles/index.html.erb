<h1 class="mt-4 text-center">Articles</h1>


<div class="container">

<% @articles.each do |article| %>
<div class="row justify-content-md-center mt-4">
    <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
            by Haechal Abdillah
        </div>
        <div class="card-body ">
            <h5 class="card-title"><%= link_to article.title, article_path(article) , class:"card-body text-dark" %></h5>
            <p class="card-text"><%= truncate(article.description , lenght: 100) %></p>
            <a><%= link_to "View" , article_path(article) , class: "btn btn-outline-success m-1" %></a>
            <a><%= link_to "Edit" , edit_article_path(article) , class: "btn btn-outline-info m-1" %></a>
            <a><%= link_to "Delete" , article_path(article), method: :delete , data: {confirm: "are you sure?"} , class: "btn btn-outline-danger m-1" %></a>
        </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago,
            edited <%= time_ago_in_words(article.updated_at) %> ago </small>
        </div>
        </div>
    </div>

</div>    
<% end %>
</div>    



